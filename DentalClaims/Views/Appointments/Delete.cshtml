@model DentalClaims.ViewModels.AppointmentViewModel

@{
    ViewData["Title"] = "Excluir Consulta";
}

<h2>Excluir Consulta</h2>

<div>
    <h3>Tem certeza de que deseja excluir esta consulta?</h3>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomePaciente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomePaciente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Procedimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Procedimento)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}